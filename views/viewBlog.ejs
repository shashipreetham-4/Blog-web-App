<%- include("partials/header.ejs") %>

    <div class="container  view-container py-4">
        <% if (locals.blog) { %>
            <div class="view-blog">
                <h1 class="mb-3">
                    <%= blog.title %>
                </h1>
                <h4 class="text-muted mb-3">By <%= blog.Author %>
                </h4>
                <p class="fs-5">
                    <%= blog.content %>
                </p>
            </div>
            <% } else { %>
                <div class="view-blog text-center">
                    <h1>Blog Title</h1>
                    <h3 class="text-muted">Created by:</h3>
                    <p>Sorry, Couldn't find the blog...</p>
                </div>
                <% } %>
    </div>
    <footer>
        <%- include("partials/footer.ejs") %>
    </footer>