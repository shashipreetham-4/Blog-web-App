<%- include("partials/header.ejs") %>

    <body>
        <div class="container py-4">
            <% if (locals.blogedit) { %>
                <form action="/editedblog" method="POST" class="shadow p-4 rounded">
                    <input name="title" type="text" class="form-control mb-3" value="<%= blogedit.title %>"
                        placeholder="Blog Title" required />
                    <input name="author" type="text" class="form-control mb-3" value="<%= blogedit.Author %>"
                        placeholder="Author Name" required />
                    <input type="hidden" name="index" value="<%= index %>" />
                    <textarea name="content" class="form-control mb-3" rows="8"
                        required><%= blogedit.content %></textarea>
                    <button type="submit" class="btn btn-primary w-100">Update Blog</button>
                </form>
                <% } else { %>
                    <form action="/updatedallblogs" method="POST" class="shadow p-4 rounded">
                        <input name="title" type="text" class="form-control mb-3" placeholder="Blog Title" required />
                        <input name="author" type="text" class="form-control mb-3" placeholder="Author Name" required />
                        <textarea name="content" class="form-control mb-3" rows="8"
                            placeholder="Write your blog content here..." required></textarea>
                        <button type="submit" class="btn btn-primary w-100">Create Blog</button>
                    </form>
                    <% } %>
        </div>
    </body>
    <footer>
        <%- include("partials/footer.ejs") %>
    </footer>